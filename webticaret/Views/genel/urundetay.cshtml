
@{
    ViewBag.Title = "urundetay";
}
<nav aria-label="breadcrumb" class="mt-2 mb-2">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">@ViewBag.kate</li>
        <li class="breadcrumb-item" aria-current="page">@ViewBag.altkate</li>
        <li class="breadcrumb-item active" aria-current="page">@ViewBag.urunad</li>

    </ol>
</nav>
<div class="card mb-3">
    <div class="card-header">
        @ViewBag.urunad
    </div>
    <div class="card-body">
        <div class="container">
            <div class="row">
                <div class="col-4">
                    <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel" style="width:25rem;">
                        <div class="carousel-indicators">
                            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
                        </div>
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img src="~/images/@ViewBag.id/@ViewBag.resim1" class="d-block w-100" alt="...">
                            </div>
                            <div class="carousel-item">
                                <img src="~/images/@ViewBag.id/@ViewBag.resim2" class="d-block w-100" alt="...">
                            </div>
                            <div class="carousel-item">
                                <img src="~/images/@ViewBag.id/@ViewBag.resim3" class="d-block w-100" alt="...">
                            </div>
                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Geri</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">İleri</span>
                        </button>
                    </div>
                </div>
                <div class="col-8">
                    <h2>@ViewBag.urunad</h2>
                    <h3>Açıklama:</h3>
                    <h4>@ViewBag.aciklama</h4>
                    <h3>Stok Adeti:</h3>
                    <h4>@ViewBag.adet Adet</h4>
                    <h3>Ürün Fiyatı:</h3>
                    <h4>@ViewBag.fiyat ₺</h4>
                    <h3>Kargo Adı:</h3>
                    <h4>@ViewBag.kargoadi</h4>
                    <h3>Kargo Hakkında:</h3>
                    <h4>@ViewBag.kargobilgi</h4>
                    <div class="mb-3 mb-3">
                        <label for="exampleInputEmail1" class="form-label">Adet : </label>
                        <input type="number" class="form-control" id="exampleInputEmail1" value="1">
                    </div>
                    <button type="button" class="btn btn-primary">Sepete Ekle</button>
                    <button type="button" class="btn btn-primary">Hemen Al!</button>

                </div>
            </div>
        </div>
    </div>
</div>